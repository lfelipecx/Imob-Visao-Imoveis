generator client {
  provider        = "prisma-client" // or `prisma-client-js`
  output          = "../generated/prisma"
  engineType      = "client" // enable Prisma ORM without Rust
}

datasource db {
  provider = "postgresql"
}

model Enterprise {
  id               String         @id @default(uuid())
  name             String
  price            Decimal        @db.Decimal(10, 3)
  imageUrls        String[]
  description      String
  bathroom         Int
  room             Int
  garage           Int
  city             String
  address          String
  categoryId       String
  category         Category       @relation(fields: [categoryId], references: [id])
}

model Category {
  id          String       @id @default(uuid())
  name        String
  imageUrl    String
  slug        String
  enterprises Enterprise[]
}


model Testimony {
  id        String @id @default(uuid())
  name      String
  imageUrl  String
  testimony String
}
